{% extends 'base.html.twig' %}

{% block body %}
    

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form action="{{ path('product_import') }}" method="post" enctype="multipart/form-data">
                                <div class="input-group input-sm">
                                    <input type="file" name="csv_file" required class="form-control form-control-sm">
                                    <button type="submit" class="btn btn-primary btn-sm">Import CSV</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        OR
                    </div>
                </div>
                {{ form_start(form) }}
                <div class="modal-body">
                     {{ form_errors(form) }}
                    <div class="form-inline">
                        <div class="form-group">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="form-group mt-2">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="form-group mt-2">
                            {{ form_label(form.price) }}
                            {{ form_widget(form.price) }}
                            {{ form_errors(form.price) }}
                        </div>
                        <div class="form-group mt-2">
                            {{ form_label(form.stockQuantity) }}
                            {{ form_widget(form.stockQuantity) }}
                            {{ form_errors(form.stockQuantity) }}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary btn-sm">Save Changes</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}